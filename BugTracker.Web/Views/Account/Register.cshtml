@{
    ViewData["Title"] = "Register";
    Layout = null;
}
@model AuthUserCreateUpdateDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Optional: Include your custom site CSS here -->
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="row m-b-20">
            <div class="col-md-12">
                <h6 class="text-danger text-center">@ViewBag.ErrorMessage</h6>
            </div>
        </div>
    }

    <div class="container mt-5" style="width:30%">
        <h2 class="mb-4">Register</h2>
        <form asp-action="Register" method="post" asp-antiforgery="true">
            <div class="form-group mb-3">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter user name" name="Name" required>
            </div>

            <div class="form-group mb-3">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="Email" required>
            </div>

            <div class="form-group mb-3 position-relative">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Password" required>
            </div>

            <div class="form-group mb-3 position-relative">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" name="ConfirmPassword" required>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="isUser" name="IsUser">
                <label class="form-check-label" for="isUser">As User</label>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <div class="mt-3">
            <a asp-controller="Account" asp-action="Login" class="btn btn-link">Back to Login</a>
        </div>
    </div>

    <!-- Bootstrap JS with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

